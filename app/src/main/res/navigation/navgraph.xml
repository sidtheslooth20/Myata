<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.musicplayerapp.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/streamsFragment"
        android:name="com.example.musicplayerapp.fragments.StreamsFragment"
        android:label="fragment_streams"
        tools:layout="@layout/fragment_streams" >
        <action
            android:id="@+id/action_streamsFragment_to_mainFragment"
            app:destination="@id/player_myata" />
    </fragment>
    <fragment
        android:id="@+id/player_myata"
        android:name="com.example.musicplayerapp.fragments.PlayerFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_music_to_streamsFragment"
            app:destination="@id/streamsFragment" />
    </fragment>
    <fragment
        android:id="@+id/donate"
        android:name="com.example.musicplayerapp.fragments.DonateFragment"
        android:label="fragment_donate"
        tools:layout="@layout/fragment_donate" >
        <action
            android:id="@+id/action_donate_to_player_myata"
            app:destination="@id/player_myata" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.musicplayerapp.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_streamsFragment2"
            app:destination="@id/streamsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_donate"
            app:destination="@id/donate" />
        <action
            android:id="@+id/action_mainFragment_to_player_myata"
            app:destination="@id/player_myata" />
        <action
            android:id="@+id/action_mainFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.musicplayerapp.fragments.InfoFragment"
        android:label="InfoFragment" >
        <action
            android:id="@+id/action_infoFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_infoFragment_to_donate"
            app:destination="@id/donate" />
        <action
            android:id="@+id/action_infoFragment_to_player_myata"
            app:destination="@id/player_myata" />
    </fragment>
</navigation>