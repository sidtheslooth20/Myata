    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A6AB5">

        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="РАДИО МЯТА - РАДИО, КОТОРОЕ НЕ ШИПИТ"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/mullerthin"
            android:textSize="26.5sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/grid"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/grid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/yandex"
                android:src="@drawable/ic_yandex"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/instagram"
                android:src="@drawable/ic_insta"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/boosty"
                android:src="@drawable/ic_boosty"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/vk"
                android:src="@drawable/ic_vk"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/youtube"
                android:src="@drawable/ic_youtube"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <ImageView
                android:id="@+id/twitter"
                android:src="@drawable/ic_twitter"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <ImageView
                android:id="@+id/telegram"
                android:src="@drawable/ic_telegram"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <ImageView
                android:id="@+id/spotify"
                android:src="@drawable/ic_spotify"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

        </GridLayout>

