<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".fragments.PlayerFragment"
        android:background="@drawable/myata_bg"
        android:id="@+id/constraint_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo"
            android:id="@+id/photo"
            />

        <TextView
            android:id="@+id/main_author"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="#FFFF00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/main_song"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/mullerheavy"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/main_song"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFFF00"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/mullerthin"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_streams"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/btn_play"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/bottom_streams"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_layout"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/home_btn"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_btn"
                />
            <ImageView
                android:id="@+id/streams_btn"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/streams_btn"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>