<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DonateFragment"
        android:fitsSystemWindows="true"
        android:background="@drawable/donate_bg"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="26.5sp"
            android:text="ПОМОЧЬ ПРОЕКТУ"
            android:gravity="center"
            android:id="@+id/title"
            android:fontFamily="@font/mullerthin"
            android:textColor="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webView"
                        android:visibility="gone"
                        tools:ignore="Suspicious0dp" />

                    <LinearLayout
                        android:id="@+id/form"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        tools:ignore="Suspicious0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_height="77dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <HorizontalScrollView
                                android:layout_height="0dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="90dp"
                                android:orientation="horizontal"
                                android:layout_weight="7"
                                android:id="@+id/summs"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent">

                                    <Button
                                        android:id="@+id/sum100"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:text="100"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum200"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:text="200"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum500"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/black"
                                        android:text="500"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum1000"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:text="1000"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                    <Button
                                        android:id="@+id/sum0"
                                        android:layout_height="match_parent"
                                        android:layout_width="wrap_content"
                                        app:tint="@color/white"
                                        android:text="Другая\nсумма"
                                        android:background="@drawable/summ"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="5dp"
                                        />

                                </LinearLayout>

                            </HorizontalScrollView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <EditText
                            android:paddingTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:hint="Комментарий"
                            android:fontFamily="@font/mullerregular"
                            android:gravity="top"
                            android:maxHeight="164dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_text"
                            android:background="@drawable/comment_bg"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent" />

                        <Button
                            android:fontFamily="@font/mullerregular"
                            android:id="@+id/sendBtn"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/send_btn"/>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>