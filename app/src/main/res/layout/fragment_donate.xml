<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DonateFragment"
        android:fitsSystemWindows="true"
        android:background="@drawable/donate_bg"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="26.5sp"
            android:text="ПОМОЧЬ ПРОЕКТУ"
            android:gravity="center"
            android:id="@+id/title"
            android:fontFamily="@font/mullerthin"
            android:textColor="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webView"
                        android:visibility="gone"
                        tools:ignore="Suspicious0dp" />

                    <LinearLayout
                        android:id="@+id/form"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        tools:ignore="Suspicious0dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_height="77dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:fontFamily="@font/mullerregular"
                                android:id="@+id/summ"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/summ"
                                android:layout_gravity="center"
                                android:stretchColumns="1"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:hint="Сумма"
                                android:inputType="number"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <androidx.appcompat.widget.SwitchCompat
                                app:switchPadding="0dp"
                                android:thumb="@drawable/payment_thumb"
                                app:track="@drawable/payment_switch"
                                android:id="@+id/switch_ac"
                                app:switchMinWidth="129dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:layout_width="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <EditText
                            android:paddingTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:hint="Комментарий"
                            android:fontFamily="@font/mullerregular"
                            android:gravity="top"
                            android:maxHeight="164dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_text"
                            android:background="@drawable/comment_bg"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent" />

                        <Button
                            android:fontFamily="@font/mullerregular"
                            android:id="@+id/sendBtn"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/send_btn"/>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>