<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.musicplayerapp.StreamsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/streamsMenu"
        tools:context=".fragments.StreamsFragment"
        android:orientation="vertical"
        android:background="@drawable/streams_bg">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:src="@drawable/myata_banner"
                android:layout_gravity="center"
                android:id="@+id/myata_stream_banner"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:src="@drawable/gold_banner"
                android:layout_gravity="center"
                android:id="@+id/gold_stream_banner"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="wrap_content"
                android:src="@drawable/xtra_banner"
                android:layout_gravity="center"
                android:id="@+id/xtra_stream_banner"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/bttmline"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/home_btn"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_btn"
                />
            <ImageView
                android:id="@+id/player_btn"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/player_btn"
                />

        </LinearLayout>

    </LinearLayout>
</layout>